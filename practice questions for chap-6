let a = prompt("Please enter your age here");
a = Number.parseInt(a);
if(a<0){
  console.error("The entered age is negative ");
}
else if( a>=0 && a < 18)
{
alert("You can't drive");
}
 
else{
  alert("You can drive");  
}
let b = confirm("Do you want to see prompt again");
if (b){
  prompt("Again, Please enter your correct age here")
}
else{
  alert("thankyou")
}
