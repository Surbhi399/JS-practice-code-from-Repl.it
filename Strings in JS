// Strings
let Mother = "Kiran Jain";
console.log(Mother);
console.log(Mother.length);
console.log(Mother[4]);
console.log(Mother[10]);
console.log(Mother.indexOf("K"));
// Template literals
let Brother = "Abhi Jain"
let Father = "Sunil Jain"
console.log(`${Brother} is the son of ${Father}`);
// Escape sequence characters
let Sister = "Surbhi\'s dress is good";
console.log(Sister);
let Sister1 = "Surbhi\nJain";
console.log(Sister1);
let Sister2 = "Surbhi\tJain";
console.log(Sister2);
let Sister3 = "Surbhi\rJainoo";
console.log(Sister3);
// String properties and methods
let name = "Abhishek";
console.log(name.length);
console.log(name.toUpperCase());
console.log(name.toLowerCase());
console.log(name.slice(0,4));
console.log(name.slice(4));
console.log(name.replace("Abhishe" ,"Surbhi"))
console.log(name.concat(" is the son of ",Father , " and " , Mother))
console.log(name.indexOf("h"));
console.log(name.lastIndexOf("h"));
console.log(name.charAt(0));
console.log(name.charCodeAt(0));
console.log(name.split(""));
console.log(name.trim());


let name1 = "           Abhishek                ";
console.log(name1.trim()); /// remove the space starting and ending space 
console.log(name1.trimStart());
console.log(name1.trimEnd());
let name2 = "Abhishek";
console.log(name2.padStart(12, "x"));
console.log(name2.padEnd(10, "x"));
const name3 = "W3Schools";
let letter = name3.at(2);
console.log(letter);
let str = "Apple, Banana, Kiwi";
let part = str.substring(7, 13);
console.log(part);
let text = "Hello world!  ";
let result = text.repeat(2);
console.log(result);
let text1 = "I love cats. Cats are very easy to love. Cats are very popular";
text = text1.replaceAll(/Cats/g,"Dogs");
text = text1.replaceAll(/cats/g,"dogs");
console.log(text);
text2 = text1.replaceAll("Cats","Pandas");
console.log(text2);
